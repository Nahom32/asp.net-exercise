@model Category

<form method="post" asp-action="DeletePOST">
    <input asp-for ="Id" hidden>
    <div asp-validation-summary="All"></div>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <hr/>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="displayOrder"></label>
            <input asp-for="displayOrder" disabled class="form-control">
            <span asp-validation-for="displayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px;" >Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px;">Go Back</a>
    </div>
</form>